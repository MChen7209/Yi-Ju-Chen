%li#customer_dropdown.dropdown.inverse-dropdown.active
  = link_to "#{current_or_guest_user.first_name}/My Account", '#', class: 'dropdown-toggle',
            'data-toggle' => 'dropdown', role: :button, 'aria-expanded' => :false, id: :user_name
  %ul.dropdown-menu{role: :menu}
    %li#user_checkout= link_to 'Shopping Cart', users_checkout_path
    %li#user_purchases= link_to 'Past Purchases', users_purchases_path
    %li.divider{role: :presentation}
    %li#user_dropdown_sign_out= link_to 'Sign Out', destroy_user_session_path, method: :delete