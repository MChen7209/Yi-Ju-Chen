%h1.text-center Seating Charts
%br

.col-md-1.col-md-offset-3
  =link_to 'New Seating Chart', new_admin_seating_chart_path, class: 'pull-right btn btn-primary'

.col-md-4
  -if @seating_charts.count == 0 then
    %tr
      %td
        %b= 'No seating charts created yet.'
  -else
    %table.table
      %thead
        %tr
          %th= 'Seating Chart Name'
          %th= 'Options'
      
      %tbody
        - @seating_charts.each do |seating_chart|
          %tr
            %td= seating_chart.name
            %td{ min_width: '100px;'}
              =link_to 'Show', admin_seating_chart_path(seating_chart), class: 'btn btn-primary'
              \|
              =link_to 'Delete', admin_seating_chart_path(seating_chart), class: 'btn btn-primary', :method => :delete, :data => { :confirm => "Are you sure you want to delete #{seating_chart.name}?" }

%br